<project name="Statecharts" default="run" basedir=".">
	<description></description>
	
  	<target name="compile" > 
  		<description>Compile the transformation</description>  
 		<delete dir="build"></delete>   		
  		<ant antfile="Tools_build.xml" dir="." target="compile"/>  		
  		<ant antfile="SCIView_build.xml" dir="." target="compile"/>
  		<ant antfile="SCIAdapter_build.xml" dir="." target="compile"/>
  		<ant antfile="SCITest_build.xml" dir="." target="compile"/>	
 		<!-- <ant antfile="SCITest_build.xml" dir="." target="run"/> -->
 	</target> 
 	
 	<target name="run">
 		<ant antfile="SCSTest_build.xml" dir="." target="run"/>
  	</target>

  	<target name="clean">
  		<delete dir="build"></delete>   		
 	</target>
 	
 	<target name="create_jar" 
		description="create the jar file">
		<jar destfile="./SCImplantation.jar" >
			<fileset dir="./build/bin" />
			<fileset dir="./build/src/TLL" />
		</jar>
	</target>	
 	
</project>
