<project name="BasicMtl_Transformation_libraires" default="vehicule_antlr2tll" basedir=".">
	<description>
        Build file for the different BasicMTL files in this project
	</description>
	<!-- set global properties for this build -->
	<property name="src" location="./src"/>
	<property name="bin" location="./bin"/>
	<property name="build" location="./build"/>

	<target name="init">
    	<!-- Create the time stamp -->
    	<tstamp/>
	    <!-- Create the build directory structure used by compile -->
    	<mkdir dir="${build}"/>
	    <mkdir dir="${build}/src"/>
	    <mkdir dir="${build}/src/UncheckedTLL"/>
	    <mkdir dir="${build}/src/TLL"/>
	    <mkdir dir="${bin}"/>
	</target>
	
	<target name="vehicule_antlr2tll" depends="init"
  	 	description="Parse vehicule.mtl to an UncheckedTLL">
	 	<java jar="../../../../TLLTypeChecker/dist/bin/TLLTypeChecker.jar" 
           fork="true"
           failonerror="true"
           >
         <arg value="${src}\vehicule.mtl"/> 
         <arg value="-TLLPath"/> 
         <arg value="${build}/src/"/> 
       <!--  <classpath>
           <pathelement location="../../../../BasicMtlAntlr2TLLJava/dist/bin/BasicMtlASTJava.jar"/>
           <pathelement path="${java.class.path}"/>
         </classpath>
        -->
       </java>
 
	</target>
  
	<target name="aquatique_antlr2tll" depends="init"
  	 	description="Parse aquatique.mtl to an UncheckedTLL">
	 	<java jar="../../../../BasicMtlAntlr/dist/bin/BasicMtlAntlr.jar" 
           fork="true"
           failonerror="true"
           maxmemory="128m"
           >
         <arg value="${src}\aquatique.mtl"/> 
       <!--  <classpath>
           <pathelement path="${java.class.path}"/>
         </classpath>
        -->
       </java>
 
	</target>
	
