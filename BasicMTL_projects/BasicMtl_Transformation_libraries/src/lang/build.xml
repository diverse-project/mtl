<!-- $Id: build.xml,v 1.1 2003-08-08 15:22:27 jpthibau Exp $ -->
<project name="BasicMtl_Transformation_libraires" default="vehicule_antlr2tll" basedir=".">
	<description>
        Build file for the different BasicMTL files in this project
	</description>
	<!-- set global properties for this build -->
	<property name="src" location="./src"/>
	<property name="bin" location="./bin"/>
	<property name="build" location="./build"/>

	<target name="init">
    	<!-- Create the time stamp -->
    	<tstamp/>
	    <!-- Create the build directory structure used by compile -->
    	<mkdir dir="${build}"/>
	    <mkdir dir="${build}/src"/>
	    <mkdir dir="${build}/src/UncheckedTLL"/>
	    <mkdir dir="${build}/src/TLL"/>
	    <mkdir dir="${bin}"/>
	</target>
	
	<target name="vehicule_antlr2tll" depends="init"
  	 	description="Parse vehicule.mtl to a TLL">
	 	<java jar="../../../../TLLTypeChecker/dist/bin/TLLTypeChecker.jar" 
           fork="true"
           failonerror="true"
           >
         <arg value="${src}\vehicule.mtl"/> 
         <arg value="-TLLPath"/> 
         <arg value="${build}/src/"/> 
         <arg value="-PackageName"/> 
         <arg value="SimpleSamples.vehicules_Inheritance.bin.Vehicule"/> 
       </java>
 
	</target>

	<target name="compile vehicule" depends="vehicule_antlr2tll"
  	 	description="Generate code for vehicule.mtl">
	    <mkdir dir="${bin}/Vehicule"/>
	 	<java jar="../../../../BasicMtlJavaCodeGenerator/dist/bin/TLLCodeGenerator.jar" 
           fork="true"
           failonerror="true"
           >
         <arg value="vehiculeLib"/> 
         <arg value="-TLLPath"/> 
         <arg value="${build}/src/"/> 
         <arg value="-BinPath"/> 
         <arg value="${bin}/Vehicule/"/> 
       </java>
 
	</target>
  
