<project name="org.inria.BasicMTL.runtime" default="compile" basedir=".">
	<description>
        main Build file for the org.inria.BasicMTL.runtime
		It reuse the build.xml file generated by the PDE
	</description>
	<!-- set global properties for this build -->
	
	  	
	<target name="get sources" description="get additional sources">
		<ant antfile="copy_build.xml"/>
	</target>
  	
  	<target name="compile" description="compile all this plugin" depends="get sources">  		 		
  		<ant antfile="build.xml">
  			<property name="javacVerbose" value="false"/>
  			<property name="javacFailOnError" value="true"/>
  		</ant>
  	</target>
	
	<target name="clean" description="compile all this plugin">  				
	  		<ant antfile="build.xml" target="clean"/>	  		
	</target>
  	
	<target name="package" description="create a zip for this plugin" depends="compile">  		 		
	  		<ant antfile="build.xml" target="zip.plugin"/> 		
	</target>
</project>
