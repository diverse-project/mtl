<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.inria.SimpleUML.transformations.UI"
   name="SimpleUML transformations UI Plug-in"
   version="1.0.0"
   provider-name="INRIA"
   class="org.inria.simpleUML.transformations.UI.UIPlugin">

   <runtime>
      <library name="SimpleUML_transformations_UI.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.emf.edit"/>
      <import plugin="org.inria.EMFDriver"/>
      <import plugin="SimpleUML.edit"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.inria.SimpleUML.transformations"/>
      <import plugin="org.inria.BasicMTL.runtime"/>
   </requires>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="org.inria.SimpleUML.transformations.UI.actionSet">
         <menu
               label="Sample &amp;Menu"
               id="sampleMenu">
            <separator name="sampleGroup"/>
         </menu>
         <action
               toolbarPath="sampleGroup"
               label="&amp;Sample Action"
               class="org.inria.simpleUML.transformations.UI.actions.SampleTransformationAction"
               tooltip="Hello, Eclipse world"
               icon="icons/sample.gif"
               menubarPath="sampleMenu/sampleGroup"
               id="org.inria.simpleUML.transformations.UI.actions.SampleTransformationAction"/>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            nameFilter="*.simpleuml"
            id="org.inria.simpleUML.transformations.UI.contribution1">
         <menu
               label="SimpleUML transformations"
               path="additions"
               id="org.inria.simpleUML.transformations.UI.menu1">
            <separator name="group1"/>
         </menu>
         <action
               enablesFor="1"
               label="Refactor associations into attributes"
               class="org.inria.simpleUML.transformations.UI.popup.actions.Associations2AttributesAction"
               menubarPath="org.inria.simpleUML.transformations.UI.menu1/group1"
               id="org.inria.simpleUML.transformations.UI.newAction"/>
      </objectContribution>
   </extension>

</plugin>
